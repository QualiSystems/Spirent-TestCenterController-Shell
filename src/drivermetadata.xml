<Driver Description="Shell to setup and run STC traffic" MainClass="driver.TestCenterControllerDriver" Name="TestCenterControllerDriver" Version="1.1.0">
    <Layout>
         <Category Name="Hidden Commands">
            <Command Name="keep_alive" DisplayName="Keep Alive" Tags="" Description="" EnableCancellation="true"/>
        </Category>

		<Command Name="load_config" DisplayName="Load configuration"
				 Description="Reserve ports and load configuration" >
	    	<Parameters>
            	<Parameter Name="stc_config_file_name" DisplayName="STC config file name" Type="String" Mandatory="True"
                           Description="Full path to STC configuration file name - tcc or xml" />
            </Parameters>
        </Command>
		<Command Name="send_arp" DisplayName="Start ARP/ND"
				 Description="Send ARP/ND for all devices and streams" >
        </Command>
		<Command Name="start_devices" DisplayName="Start All Devices"
				 Description="Start all emulations on all devices" >
        </Command>
		<Command Name="stop_devices" DisplayName="Stop All Devices"
				 Description="Stop all emulations on all devices" >
        </Command>
        <Command Name="start_traffic" DisplayName="Start Traffic"
        		 Description="Start traffic on all ports">
            <Parameters>
            	<Parameter Name="blocking" DisplayName="Blocking" Type="Lookup" Mandatory="True" AllowedValues="True,False" DefaultValue="False"
                           Description="True - return after traffic finish to run, False - return immediately" />
            </Parameters>
        </Command>
        <Command Name="stop_traffic" DisplayName="Stop Traffic"
        		 Description="Stop traffic on all ports">
       	</Command>
        <Command Name="get_statistics" DisplayName="Get Statistics"
        		 Description="Get view statistics" >
         <Parameters>
            	<Parameter Name="view_name" DisplayName="View Name" Type="String" Mandatory="True" DefaultValue=""
                           Description="generatorPortResults, analyzerPortResults etc." />
                <Parameter Name="output_type" DisplayName="Output Type" Type="Lookup" Mandatory="True" AllowedValues="CSV,JSON" DefaultValue="CSV"
                		   Description="CSV or JSON" />
            </Parameters>
        </Command>

    </Layout>
</Driver>
